<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/EnablerFragment"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/ItemRow">

            <TextView
                style="@style/FormInputLabel"
                android:text="@string/bus_label" />

            <Spinner
                android:id="@+id/bus_spinner"
                style="@style/ItemData"
                android:popupBackground="@android:color/white"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/ItemRow">

            <TextView
                style="@style/FormInputLabel"
                android:text="@string/message_id_label" />

            <EditText
                android:id="@+id/message_id"
                android:maxLength="3"
                android:gravity="center"
                style="@style/HexTextField">

                <requestFocus />
            </EditText>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/ItemRow"
        android:orientation="vertical" >

        <TextView
            style="@style/FormInputLabel"
            android:text="@string/message_payload_label" />

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/ItemRow"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/message_payload"
                android:maxLength="2"
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/HexTextField">

                <requestFocus />
            </EditText>
            <EditText
                android:id="@+id/message_payload2"
                android:maxLength="2"
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/HexTextField">


                <requestFocus />
            </EditText>
            <EditText
                android:id="@+id/message_payload3"
                android:maxLength="2"
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/HexTextField">

                <requestFocus />
            </EditText>
            <EditText
                android:id="@+id/message_payload4"
                android:maxLength="2"
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/HexTextField">

                <requestFocus />
            </EditText>
            <EditText
                android:id="@+id/message_payload5"
                android:maxLength="2"
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/HexTextField">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/message_payload6"
                style="@style/HexTextField"
                android:layout_width="match_parent"
                android:digits="0123456789abcdefABCDEF"
                android:gravity="center"
                android:maxLength="2">

                <requestFocus />
            </EditText>
            <EditText
                android:id="@+id/message_payload7"
                android:maxLength="2"
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/HexTextField">

                <requestFocus />
            </EditText>
            <EditText
                android:id="@+id/message_payload8"
                android:maxLength="2"
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/HexTextField">

                <requestFocus />
            </EditText>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/send_request"
        style="@style/MinimalButton"
        android:text="@string/send_button" />

    <LinearLayout
            style="@style/ItemRow"
            android:orientation="vertical" >
        <TextView
            style="@style/ItemLabel"
            android:text="@string/last_can_message_sent_label" />

        <!-- The frame layout is here since we will be showing either
        the empty view or the list view.  -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >
            <!-- Here is the list. Since we are using a ListActivity, we
                 have to call it "@android:id/list" so ListActivity will
                 find it -->
            <ListView android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawSelectorOnTop="false">

                <TextView
                    android:id="@android:id/empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/no_can_messages_sent"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </ListView>

            <!-- Here is the view to show if the list is empty -->

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
